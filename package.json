{
  "name": "textease",
  "version": "1.0.0",
  "description": "A modern text editor built with Electron",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.textease.app",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "marked": "^4.3.0",
    "highlight.js": "^11.8.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.1",
    "@types/marked": "^4.3.0",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "spectron": "^19.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}

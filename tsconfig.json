{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
